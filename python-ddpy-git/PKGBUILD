# Maintainer: Joe Moubhij <josephmoubhij@gmail.com>

_pkgname=ddpy
pkgname=python-ddpy-git
pkgver=0.1.1
pkgrel=1
pkgdesc='Dynamic DNS client written in python'
arch=(any)
url="https://github.com/jihbuomj/${_pkgname}"
license=('MIT')
depends=('python-toml')
optdepends=('python-ddpy-route53-git: For Route53 update'
	'python-requests: For webchecking ip')
makedepends=('git' 'python-setuptools' 'python-dephell')
provides=('ddpy' 'python-ddpy')
conflicts=('ddpy' 'python-ddpy')
replaces=('ddpy')
source=("${_pkgname}"::"git+https://github.com/jihbuomj/${_pkgname}.git" 'ddpy.service')
md5sums=('SKIP' '7c74326f99950a37a6c765e3fca92fab')

prepare() {
	cd ${_pkgname}
	dephell deps convert --level DEBUG
}

build() {
	cd ${_pkgname}
	python setup.py build
}

package() {
	install -m755 -d ${pkgdir}/usr/lib/systemd/system
	install -m644 ddpy.service ${pkgdir}/usr/lib/systemd/system

	cd ${_pkgname}
	python setup.py install --root=${pkgdir} --optimize=1 --skip-build
}
